<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp">

    <TextView
        android:id="@+id/my_channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="@string/my_channel"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_channel_tv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/my_channel_tv"
        android:text="@string/my_channel_tips"
        android:textColor="@color/tips"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/finish_tv"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textSize="13sp"
        android:background="@drawable/bg_btn"
        android:textColor="@color/red_500"
        android:text="@string/finish"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tips"/>
</RelativeLayout>